{
  "name": "lego-sw-api",
  "version": "1.0.0",
  "description": "Api to manage my Lego Star Wars collection",
  "main": "server.ts",
  "scripts": {
    "start": "NODE_ENV=production node src/server",
    "dev": "nodemon src/server"
  },
  "keywords": [
    "lego",
    "star wars",
    "api",
    "rest",
    "express"
  ],
  "author": "Emilio Cadario",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.5.0",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "mongoose": "^6.0.11",
    "webpack": "^5.59.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/hpp": "^0.2.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.13",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, json",
    "exec": "ts-node --files -r tsconfig-paths/register src/server.ts"
  }
}
