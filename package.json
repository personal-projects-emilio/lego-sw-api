{
  "name": "lego-sw-api",
  "version": "1.0.0",
  "description": "Api to manage my Lego Star Wars collection",
  "main": "server.ts",
  "scripts": {
    "clean": "rimraf dist/*",
    "start": "cross-env NODE_ENV=production npm run build node ./dist/src/server",
    "dev": "nodemon src/server",
    "build": "npx tsc",
    "prepare": "husky install"
  },
  "keywords": [
    "lego",
    "star wars",
    "api",
    "rest",
    "express"
  ],
  "author": "Emilio Cadario",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.5.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "webpack": "^5.64.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/glob": "^7.2.0",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4",
    "webpack-cli": "^4.9.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, json",
    "exec": "ts-node --files -r tsconfig-paths/register src/server.ts"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
